<!DOCTYPE xhtml PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
xmlns:py="http://genshi.edgewall.org/"
xmlns:xi="http://www.w3.org/2001/XInclude" lang="en">
  <xi:include href="../master.xhtml" />
  <head />
  <body>
    <div id="content">
      <table>
        <tr>
          <td>Features</td>
          <td>Languages</td>
          <td>Creators</td>
        </tr>
        <tr>
          <td>
	    <div class="collectionlist">
            <ul>
              <li py:for="fn in c.features">
              <a href="/feature/id/${fn['featurename']}">${fn['featurename']}</a>: ${fn['featurestring']}</li>
            </ul>
	    </div>
          </td>
          <td>
	    <div class="collectionlist">
            <ul>
              <li py:for="lg in c.languages">
              <a href="/language/id/${lg['walscode']}">${lg['walscode']}</a>: ${lg['name']}</li>
            </ul>
	    </div>
          </td>
          <td>
	    <div class="collectionlist">
            <ul>
              <li py:for="creator in c.creators"> ${creator['name']}: ${creator['count']}</li>
            </ul>
	    </div>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>
